<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container-fluid">
  <div class="row">
    
    <div class="col-3 addNewWord">
      <u>add <br> a new <br> word</u>
    </div>

  
    <div class="col-8">

      <div class="row mb-4">
        <div class="col-3">
          <div>
            <%= form.label :word, class: "perFieldFont" %>
          </div>
        </div>

        <div class="col-9">
          <div class="perField">
            <%= form.text_area :word %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="perFieldFont">
            <%= form.label :meaning, class: "perFieldFont" %>
          </div>
        </div>

        <div class="col-6">
          <div class="perField">
            <%= form.text_area :meaning %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="perFieldFont">
            <%= form.label :description, class: "perFieldFont" %>
          </div>
        </div>

        <div class="col-6">
          <div class="perField">
          <%= form.text_area :description %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="perFieldFont">
            <%= form.label :example, class: "perFieldFont" %>
          </div>
        </div>

        <div class="col-6">
          <div class="perField">
            <%= form.text_area :example %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="perFieldFont">
            <%= form.label :pronunciation, class: "perFieldFont" %> 
          </div>
        </div>

        <div class="col-6">
          <div class=“perField”>
            <%= form.file_field :pronunciation %> 
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class=“perField”>
            <%= collection_check_boxes(:post, :tag_ids, Tag.all, :id, :name) %>
          </div>
        </div>
      </div>

       <div class="row">
        <div class="col-12">
          <div class="perField">
            <%= form.submit class: "btn btn-sm-primary" %>
          </div>
        </div>
      </div>

  </div>
</div>

<% end %>
