<!DOCTYPE html>
<html>
  <head>
    <title>Singlish</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if notice %>
    <p class="alert alert-success notice mb-0"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger mb-0"><%= alert %></p>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      
      <%= link_to  "Singlish", users_path, class: "navbar-brand text-light" %>


      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <% if user_signed_in? %>
            <%= link_to current_user.username, user_path(current_user.id), class: "nav-link ml-auto text-light" %>
          <% end %> 
      </div>
          <ul class="nav justify-content-end">
          <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link text-light" %>
          <% end %> 
          </ul>
    </nav>

    <%= yield %>
  </body>
</html>
