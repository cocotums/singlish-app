<p id="notice"><%= notice %></p>


<div class="container mx-5 mt-5">

  
  <div class="row">

    <%# profile colour %>
    <div class="col-sm-4 d-flex justify-content-start align-items-center flex-column">

      <% if @user.profile_pic.attached? %>
        <%= image_tag @user.profile_pic, :style => "border: 5px solid #93A8AC; border-radius: 50%;", width: 300, height: "auto" %>
      <% end %>
      <h5 style="text-align: center; color: #93a8ac; margin-top: 10px;">@<%=@user.username%></h5>

      <h3 class="mt-3"><%= @user.firstname.capitalize %> <%= @user.lastname.capitalize %></h3>


      <ul class="list-group list-group-vertical">
        <li class="list-group-item">Total posts: <%= Post.where(user_id: current_user.id).size %></li>
        <li class="list-group-item">Favourited: </li>
      </ul>

      <%# new post option only shows on your profile page %>
      <% if @user.id == current_user.id %>
          <%= link_to 'Edit profile', edit_user_registration_path(current_user), class: "mt-3" %>
      <% end %>

      <% if @user.id == current_user.id %>
          <%= link_to 'New word', new_post_path %>
      <% end %>
    </div>

    <div class="col-sm-2">
      <p class="oneAlphabet" style="font-size:50px;">POSTS: </p>
    </div>

    <%# posts column %>
    <div class="col-sm-4">
      <div class="posts-container flex-row">

        <% Post.where(user_id: current_user.id).each do |post| %>
          <div class="card" style="width: 10rem;">
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.word.upcase, post_path(post) %></h5>
              <p class="card-text"><%= post.description %></p>
            </div>
          </div>
        <% end %>

      </div>
    </div>



  </div>
</div>

