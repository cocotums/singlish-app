<p id="notice"><%= notice %></p>

<h1>Username</h1><p><%= @user.username %></p>
<h1>Name</h1><p><%= @user.firstname %> <%= @user.lastname %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Description</th>
      <th>Example</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.word %></td>
        <td><%= post.description %></td>
        <td><%= post.example %></td>
        <td><%= link_to 'Show', post %></td>

        <%# prevents you from editing or deleting other users' posts %>
        <% if post.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%# new post option only shows on your profile page %>
<% if @user.id == current_user.id %>
    <%= link_to 'New Post', new_post_path %>
<% end %>